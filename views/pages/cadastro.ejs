<%- contentFor( 'body') %>

<div class="jumbotron">
    <h2> Dados cadastrais</h2>
    <p>Lista de usuários cadastrais no sistema.</p>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Nome</th>
            <th>Endereço</th>
            <th>Email</th>
            <th>idade</th>
            <th>Altura</th>
            <th>Vota?</th>
            <th>Ação</th>
        </tr>
        </thead>
        <tbody>
                <% let linkRemove="/cadastro/remove/"; %>
                <% let linkUpdate="/cadastro/update/"; %>
                <% let cont=0; %>
                <% for(usuario of usuarios){ %>
                    <tr>    

                    <td><%=usuario.name%></td>
                    <td><%=usuario.endereco%></td>
                    <td><%=usuario.email%></td>
                    <td><%=usuario.age%></td>    
                    <td><%=usuario.height%></td>
                    <td><%=usuario.vote%></td>
                    <td><a href="%=linkUpdate + "id=" + cont %>"></a>><i class="fas fa-pan"></i></a></td>
                    <td><a href="%=linkRemove %"><i class="fas fa-trash-alt"></i></a></td>
                
                    </tr> 
                    <% cont++;%>   
                <% } %>
        </tbody>
    </table>
</div>